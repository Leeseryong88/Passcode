rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all direct access to puzzles; must go through Cloud Functions
    match /puzzles/{puzzleId} {
      allow read, write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}



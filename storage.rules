rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 공개 이미지 경로: 퍼즐/보상 이미지 조회는 허용
    match /puzzles/{allPaths=**} {
      // 누구나 읽기 가능(앱에서 이미지 표시 목적)
      allow read: if true;
      // 특정 사용자만 쓰기 가능 (이메일 또는 UID 기준)
      allow write: if request.auth != null && (
        request.auth.token.email == "kidcap1001@naver.com" ||
        request.auth.uid == "4SaBAFjWFXNl0h2E78eTBMQQyC62"
      );
    }

    match /rewards/{allPaths=**} {
      // 공개 읽기 허용: 이미지 직접 로드
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.email == "kidcap1001@naver.com" ||
        request.auth.uid == "4SaBAFjWFXNl0h2E78eTBMQQyC62"
      );
    }

    // 그 외 경로는 기본 거부
    match /{path=**} {
      allow read, write: if false;
    }
  }
}


